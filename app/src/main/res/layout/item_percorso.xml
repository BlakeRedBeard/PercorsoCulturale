<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/item_percorso"
        android:layout_weight="1">

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/item_percorso_image"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:src="@drawable/puzzle_1"/>

    <TextView
        android:id="@+id/item_percorso_name"
        android:text="Lorem Ipsum sit dolore"
        android:layout_below="@id/item_percorso_image"
        android:layout_alignStart="@id/item_percorso_image"
        android:layout_alignEnd="@+id/item_percorso_image"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:maxLines="3"
        android:fontFamily="sans-serif-black"
        android:textStyle="italic"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="15sp"/>
</RelativeLayout>
